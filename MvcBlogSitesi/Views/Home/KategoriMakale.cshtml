@model IEnumerable<MvcBlogSitesi.Models.Makale>

@{
    ViewBag.Title = "KategoriMakale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using GridMvc.Html
<link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>

<div class="col-md-8">
    @Html.Grid(Model).Columns(columns =>
{
    columns.Add(m => m.Kategori.KategoriAdı).Titled("Kategori Adı").SetWidth(110).Sortable(true).Filterable(true);
    columns.Add(m => m.MakaleBaşlık).Sortable(true).Filterable(true);
    columns.Add(m => m.MakaleTarih).Sortable(true).Filterable(true);
    columns.Add(m => m.MakaleOkunma).Sortable(true).Filterable(true);
}).WithPaging(3).SetLanguage("tr")

</div>

