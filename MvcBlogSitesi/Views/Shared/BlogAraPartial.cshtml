@using (Html.BeginForm("BlogAra", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="card my-4">
        <h5 class="card-header">Ara</h5>
        <div class="card-body">
            <div class="input-group">
                <input id="Ara" name="Ara" type="text" class="form-control" placeholder="Arayın">
                <span class="input-group-btn">
                    <button class="btn btn-primary" value="Ara" type="submit"><i class="fas fa-search"></i></button>
                </span>
            </div>
        </div>
    </div>
}

